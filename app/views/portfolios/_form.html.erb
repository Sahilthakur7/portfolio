

<%=form_for(portfolio_item) do |f|%>
    <div class="form-group">
        <%=f.label :title%>
        <%=f.text_field :title, class: "form-control"%>
    </div>

    <div class="form-group">
        <%=f.label :subtitle%>
        <%=f.text_field :subtitle, class: "form-control"%>
    </div>

    <div class="form-group">

        <label class="btn btn-primary">
            Upload a main image file<%= f.file_field :main_image, class: 'form-control',style: 'display:none;'%>
    </label>
    </div>

    <div class="form-group">
        <label class="btn btn-primary">
            Upload a thumb image file<%= f.file_field :thumb_image, class: 'form-control',style: 'display:none;'%>
    </label>
    </div>


    <div class="form-group">
        <%=f.label :body%>
        <%=f.text_area :body, class: "form-control",rows: 10%>
    </div>

    <hr>
    <h2>Technologies Used:</h2>

    <ul>
        <%= f.fields_for :technologies do |ff| %>
            <%= render 'technology_fields',f: ff%>
        <%end%>
    </ul>
    <div>
        <%= link_to_add_association 'Add Technology' , f , :technologies%>
    </div>

    <div class="actions">
        <%=f.submit "Submit", class: "btn btn-primary btn-block"%>
    </div>
<%end%>

